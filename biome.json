{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"style": {
				"useSelfClosingElements": "off",
				"noUselessElse": "off"
			},
			"a11y": {
				"noLabelWithoutControl": "off",
				"useValidAnchor": "off",
				"useAltText": "off",
				"useButtonType": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "always",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	}
}